---
import { MetaNavigation } from "./MetaNavigation";
import { SocialNavigation } from "./SocialNavigation";

const copyright = `Copyright &copy; ${new Date().getFullYear()} Pascal Schaar`;
---

<footer class="container mt-6 text-slate-600 dark:text-slate-400">
	<div
		class="flex flex-col-reverse items-center justify-between gap-4 py-4 md:mt-4 md:flex-row md:gap-6 md:py-2.5"
	>
		<p class="text-sm" set:html={copyright} />
		<div
			class="max-md:space-y-2 md:flex md:items-center md:space-x-4 md:divide-x md:divide-slate-400 md:dark:divide-slate-600"
		>
			<SocialNavigation />
			<MetaNavigation />
		</div>
	</div>
</footer>
