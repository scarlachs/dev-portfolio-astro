---
import { MetaNavigation } from "./MetaNavigation";
import { SocialNavigation } from "./SocialNavigation";

const copyright = `Copyright &copy; ${new Date().getFullYear()} Pascal Schaar`;
---

<div class="container mt-6 text-slate-600 dark:text-slate-400">
	<div
		class="flex flex-col-reverse items-center justify-between gap-6 py-6 md:mt-4 md:flex-row md:py-2.5"
	>
		<p class="text-sm" set:html={copyright} />
		<div class="max-md:space-y-4 md:flex md:items-center md:space-x-4">
			<SocialNavigation />

			<MetaNavigation />
		</div>
	</div>
</div>
